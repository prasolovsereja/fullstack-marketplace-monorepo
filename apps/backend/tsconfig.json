{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "ts-node": {
    "esm": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "addJsExtension": true
  }
}
